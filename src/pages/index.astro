---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header";
import Hero from "../components/Hero";
import UpcomingEvents from "../components/UpcomingEvents";
import About from "../components/About";
import Products from "../components/Products";
import Purposes from "../components/Purposes";
import Contact from "../components/Contact";
import { en } from "../i18n/en";
---

<MainLayout t={en}>
  <Header t={en} currentLang="en" pathname={Astro.url.pathname} client:load />
  <Hero t={en} currentLang="en" client:load />
  <UpcomingEvents t={en} currentLang="en" client:load />
  <About t={en} lang="en" client:load />
  <Products t={en} lang="en" client:load />
  <Purposes t={en} client:load />
  <Contact t={en} lang="en" client:load />
</MainLayout>
